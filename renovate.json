{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "helpers:pinGitHubActionDigests",
        ":dependencyDashboard",
        ":semanticCommitTypeAll(chore)"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "configMigration": true,
    "assignAutomerge": true,
    "automergeStrategy": "rebase",
    "automergeType": "pr-comment",
    "platformAutomerge": true,
    "baseBranchPatterns": [
        "main"
    ],
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "labels": [
                "dependencies",
                "renovate-minor-patch",
                "renovate-automerge"
            ],
            "automerge": true,
            "automergeComment": "Renovate `minor` and `patch` version bumps are merged automatically."
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "dependencies",
                "renovate-major"
            ]
        }
    ],
    "enabledManagers": [
        "helm-values",
        "helmv3",
        "flux",
        "github-actions",
        "pre-commit"
    ],
    "helm-values": {
        "managerFilePatterns": [
            "/(^|/)values\\.yaml$/"
        ],
        "pinDigests": false
    },
    "helmv3": {
        "managerFilePatterns": [
            "/(^|/)Chart\\.yaml$/"
        ]
    },
    "flux": {
        "managerFilePatterns": [
            "/(^|/)applications/.+\\.ya?ml$/",
            "/(^|/)core/.+\\.ya?ml$/",
            "/(^|/)home-assistant/.+\\.ya?ml$/",
            "/(^|/)infrastructure/.+\\.ya?ml$/"
        ]
    },
    "github-actions": {
        "managerFilePatterns": [
            "/^(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$/",
            "/(^|/)action\\.ya?ml$/"
        ]
    },
    "pre-commit": {
        "enabled": true,
        "managerFilePatterns": [
            "/(^|/)\\.pre-commit-config\\.ya?ml$/"
        ]
    }
}